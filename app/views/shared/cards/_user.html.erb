<div class="tweet mx-4 p-2">
  <%= link_to "/profile/#{user.followee.id}", class:"tweetEntry-fullname" do %>
    <div class="tweet__avatar" style="background-image:url('<%= cl_image_path user.followee.photo.key %>')"></div>
  <% end %>
  <div class="tweet__container">
    <div class="tweet__header">
      <div class="d-flex">
        <div class="tweet__author-name-followed-users">
          <%= link_to "/profile/#{user.followee.id}", class:"tweetEntry-fullname" do %>
            <strong><%= user.followee.nickname %></strong>
          <% end %>
        </div>
        <div class="tweet__author-name-followed-users">
          <% unless user.followee == current_user %>
            <%= render 'shared/buttons/follow_user', user: user.followee %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="tweet__content">
      <%= user.followee.bio %>
    </div>
  </div>
</div>
