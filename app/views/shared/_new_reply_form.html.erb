<%= simple_form_for([@post, @reply], html: { class: "nice-class"}) do |f| %>
  <%= f.input :content, label: false, placeholder: "Reply post...", wrapper_html: { class: "wrapper-input" }, input_html: { class: "bg-input" } %>
  <%= f.input :photo, as: :file, label_html: { class: "label-input" }, input_html: { class: "bg-input" }  %>
  <%= f.button :submit, "Post", class: "btn-post-tweet" %>
<% end %>
