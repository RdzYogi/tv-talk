<div class="our-container">
  <div class="container">
    <div class="poster-form-container d-flex">
      <div class="post-movie-poster mt-3 col-4" id="chatroom-show-poster" style="background-image:url('<%= @post.chat_room.movie.poster_url %>');"></div>
      <div class="mt-3 col-8">
        <h1 class="movie-chatroom-title"><%= @chat_room.movie.title %></h1>
        <div class="d-flex justify-content-start container-new-post" >
          <div id="chatroom-new-post-form" class="m-3" >
            <div class="tweetEntry-avatar rounded-circle user-avatar-small" style="background-image:url('<%= cl_image_path current_user.photo.key %>')"></div>
            <div class="form-post-new ml-3 mr-3">
              <%= render 'shared/new_post_chatroom_form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% @posts.each do |post| %>
      <%= render 'shared/posts_chatroom', chat_room: @chat_room, post: post %>
    <% end %>
  </div>
</div>
